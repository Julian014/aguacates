    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Agregar Nuevo Carro</h2>
            <form id="carForm">
                <div class="form-group">
                    <label for="carName">Nombre del Carro:</label>
                    <input type="text" id="carName" name="carName" required>
                </div>
                <div class="form-group">
                    <label for="carYear">Año:</label>
                    <input type="number" id="carYear" name="carYear" required>
                </div>
                <div class="form-group">
                    <label for="carColor">Color:</label>
                    <input type="text" id="carColor" name="carColor" required>
                </div>
                <div class="form-group">
                    <label for="carEngine">Motor:</label>
                    <input type="text" id="carEngine" name="carEngine" required>
                </div>
                <div class="form-group">
                    <label for="carTransmission">Transmisión:</label>
                    <input type="text" id="carTransmission" name="carTransmission" required>
                </div>
                <div class="form-group">
                    <label for="carPrice">Precio:</label>
                    <input type="number" id="carPrice" name="carPrice" required>
                </div>
                <button type="submit" class="btn">Agregar Carro</button>
            </form>
        </div>
    </div>
    <script>
        // Función para mostrar y ocultar el modal
        const modal = document.getElementById('myModal');
        const span = document.getElementsByClassName('close')[0];

        function mostrarModal() {
            modal.style.display = 'block';
        }

        span.onclick = function() {
            modal.style.display = 'none';
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }

        // Función para manejar el formulario de nuevo carro
        document.getElementById('carForm').addEventListener('submit', function(event) {
            event.preventDefault();

            const carName = document.getElementById('carName').value;
            const carYear = document.getElementById('carYear').value;
            const carColor = document.getElementById('carColor').value;
            const carEngine = document.getElementById('carEngine').value;
            const carTransmission = document.getElementById('carTransmission').value;
            const carPrice = document.getElementById('carPrice').value;

            agregarCarro(carName, carYear, carColor, carEngine, carTransmission, carPrice);

            modal.style.display = 'none';
        });

        // Función para agregar un nuevo carro a la lista de vehículos
        function agregarCarro(name, year, color, engine, transmission, price) {
            const listaVehiculos = document.getElementById('lista-vehiculos');

            const vehicleDiv = document.createElement('div');
            vehicleDiv.className = 'vehicle';

            const vehicleImg = document.createElement('img');
            // Aquí puedes definir la lógica para la imagen del carro, si deseas cargarla dinámicamente.

            const detailsDiv = document.createElement('div');
            detailsDiv.className = 'details';

            const vehicleTitle = document.createElement('h3');
            vehicleTitle.textContent = name;

            const vehicleDetails = document.createElement('p');
            vehicleDetails.innerHTML = `Año: ${year}<br>Color: ${color}<br>Motor: ${engine}<br>Transmisión: ${transmission}<br>Precio: $${price}`;

            const buyButton = document.createElement('button');
            buyButton.className = 'btn';
            buyButton.textContent = 'Comprar';
            buyButton.onclick = function() {
                agregarAlCarrito(name, parseFloat(price));
            }

            detailsDiv.appendChild(vehicleTitle);
            detailsDiv.appendChild(vehicleDetails);
            detailsDiv.appendChild(buyButton);

            vehicleDiv.appendChild(vehicleImg);
            vehicleDiv.appendChild(detailsDiv);

            listaVehiculos.appendChild(vehicleDiv);
        }

        // Funciones para manejar el carrito de compras
        let carrito = [];

        function agregarAlCarrito(nombre, precio) {
            carrito.push({ nombre, precio });
            actualizarCarrito();
        }

function actualizarCarrito() {
    const listaCarrito = document.getElementById('lista-carrito');
    const totalCarrito = document.getElementById('total-carrito');
    listaCarrito.innerHTML = '';
    let total = 0;
    carrito.forEach(producto => {
        const li = document.createElement('li');
        li.textContent = `${producto.nombre} - $${producto.precio.toLocaleString('es-ES')}`;
        listaCarrito.appendChild(li);
        total += producto.precio;
    });
    totalCarrito.textContent = `$${total.toLocaleString('es-ES')}`;
}

        function finalizarCompra() {
            alert('¡Compra finalizada con éxito!');
            carrito = [];
            actualizarCarrito();
        }
    </script>
