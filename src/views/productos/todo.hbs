<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mundo Aguacate - Productos</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
        body {
            background-color: #e8f5e9; /* Color de fondo verde claro */
            font-family: 'Lobster', sans-serif; /* Fuente Lobster */
        }
    .navbar {
      background-color: #6b8e23;
      animation: slideIn 1s ease-out;
    }
    .navbar-brand, .nav-link {
      color: #fff !important;
    }
    .nav-link:hover {
      color: #ffd700 !important;
    }
    .jumbotron {
      background-color: #8fbc8f;
      color: #fff;
      animation: fadeIn 2s ease-in;
    }
    .btn-primary {
      background-color: #556b2f;
      border-color: #556b2f;
      animation: bounce 2s infinite;
    }
    .btn-primary:hover {
      background-color: #6b8e23;
      border-color: #6b8e23;
    }
    .gallery {
      margin-top: 30px;
    }
    .gallery img {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      margin-bottom: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      animation: zoomIn 1s ease-in;
    }
    @keyframes slideIn {
      from { transform: translateX(-100%); }
      to { transform: translateX(0); }
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
      40% { transform: translateY(-30px); }
      60% { transform: translateY(-15px); }
    }
    @keyframes zoomIn {
      from { transform: scale(0); }
      to { transform: scale(1); }
    }
    #cart {
      background-color: #ffffff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    #cart h2 {
      font-family: 'Pacifico', cursive;
      color: #556b2f;
    }
    #totalAmount {
      color: #ff4500;
      font-weight: bold;
    }
    .list-group-item {
      background-color: #f8f8f8;
      border: 1px solid #e0e0e0;
    }
    .badge-primary {
      background-color: #556b2f;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg">
    <a class="navbar-brand" href="#">Mundo Aguacate</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/principal">Inicio</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="#">Productos <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#about">Nosotros</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#contact">Contacto</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div id="products" class="gallery">
      <h2 class="text-center mb-4">Nuestros Productos</h2>
      <div class="row">
        <div class="col-md-4">
          <div class="card">
            <img src="imagenes/images.jpg" class="card-img-top" alt="Aguacate 1">
            <div class="card-body">
              <h5 class="card-title">Aguacate Fresco</h5>
              <p class="card-text">Precio por kilo: $8.000</p>
              <form onsubmit="addToCart(event, 'Aguacate Fresco', 8000, 'quantity1')">
                <div class="form-group">
                  <label for="quantity1">Cantidad (en kilos):</label>
                  <input type="number" class="form-control" id="quantity1" min="0" value="0">
                </div>
                <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-cart-plus"></i> Agregar al Carrito</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card">
            <img src="imagenes/maduro.jpg" class="card-img-top" alt="Aguacate 2">
            <div class="card-body">
              <h5 class="card-title">Aguacate Maduro</h5>
              <p class="card-text">Precio por kilo: $6.000</p>
              <form onsubmit="addToCart(event, 'Aguacate Maduro', 6000, 'quantity2')">
                <div class="form-group">
                  <label for="quantity2">Cantidad (en kilos):</label>
                  <input type="number" class="form-control" id="quantity2" min="0" value="0">
                </div>
                <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-cart-plus"></i> Agregar al Carrito</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card">
            <img src="imagenes/organico.jpg" class="card-img-top" alt="Aguacate 3">
            <div class="card-body">
              <h5 class="card-title">Aguacate Orgánico</h5>
              <p class="card-text">Precio por kilo: $7.000</p>
              <form onsubmit="addToCart(event, 'Aguacate Orgánico', 7000, 'quantity3')">
                <div class="form-group">
                  <label for="quantity3">Cantidad (en kilos):</label>
                  <input type="number" class="form-control" id="quantity3" min="0" value="0">
                </div>
                <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-cart-plus"></i> Agregar al Carrito</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="cart" class="mt-4">
      <h2 class="text-center">Carrito de Compras</h2>
      <ul id="cartItems" class="list-group">
        <!-- Items del carrito -->
      </ul>
      <p class="text-right mt-3"><strong>Total: $<span id="totalAmount">0</span></strong></p>
      <button id="purchaseButton" class="btn btn-success btn-block" style="display: none;"><i class="fas fa-credit-card"></i> Comprar</button>
    </div>
  </div>
  
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script>
    const cart = [];
    let totalAmount = 0;

    function addToCart(event, name, price, quantityId) {
      event.preventDefault();
      const quantity = parseInt(document.getElementById(quantityId).value);
      if (quantity > 0) {
        const cartItem = { name, price, quantity };
        cart.push(cartItem);
        totalAmount += price * quantity;
        updateCart();
      }
    }

    function updateCart() {
      const cartItemsElement = document.getElementById('cartItems');
      cartItemsElement.innerHTML = '';
      cart.forEach(item => {
        const li = document.createElement('li');
        li.className = 'list-group-item d-flex justify-content-between align-items-center';
        li.innerHTML = `
          <div>
            <i class="fas fa-shopping-cart"></i> ${item.name} - ${item.quantity} kg
          </div>
          <span class="badge badge-primary badge-pill">$${item.price * item.quantity}</span>
        `;
        cartItemsElement.appendChild(li);
      });
      document.getElementById('totalAmount').textContent = totalAmount;
      const purchaseButton = document.getElementById('purchaseButton');
      if (cart.length > 0) {
        purchaseButton.style.display = 'block';
      } else {
        purchaseButton.style.display = 'none';
      }
    }
  </script>
</body>
</html>
