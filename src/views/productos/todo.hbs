<script>
    let carrito = [];

    function agregarAlCarrito(nombre, precio) {
        carrito.push({ nombre, precio });
        actualizarCarrito();
    }

    function actualizarCarrito() {
        const listaCarrito = document.getElementById('lista-carrito');
        const totalCarrito = document.getElementById('total-carrito');
        listaCarrito.innerHTML = '';
        let total = 0;
        carrito.forEach(producto => {
            const li = document.createElement('li');
            // Formatear el precio con separadores de miles y dos decimales
            const precioFormateado = new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(producto.precio);
            li.textContent = `${producto.nombre} - ${precioFormateado}`;
            listaCarrito.appendChild(li);
            total += producto.precio;
        });
        // Formatear el total con separadores de miles y dos decimales
        const totalFormateado = new Intl.NumberFormat('es-CL', { style: 'currency', currency: 'CLP' }).format(total);
        totalCarrito.textContent = totalFormateado;
    }

    function finalizarCompra() {
        fetch('/finalizar-compra', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(carrito)
        }).then(response => {
            if (response.ok) {
                alert('Compra finalizada con éxito!');
                carrito = [];
                actualizarCarrito();
            } else {
                alert('Hubo un problema con la compra.');
            }
        });
    }
</script>


